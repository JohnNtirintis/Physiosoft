                <label class="form-check-label">
                    <input class="form-check-input" asp-for="HasScans" /> @Html.DisplayNameFor(model => model.HasScans)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

